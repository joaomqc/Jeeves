<Window x:Class="Jeeves.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeeves"
        mc:Ignorable="d"
        Title="ImageWindow" Height="200" Width="200"
        Topmost="True"
        WindowStyle="None">
    <Grid>
        <MediaElement Name="mediaElement" MediaEnded="MediaElement_OnMediaEnded" UnloadedBehavior="Manual" LoadedBehavior="Play" Stretch="Fill" />
    </Grid>
</Window>
